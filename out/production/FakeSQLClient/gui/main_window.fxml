      <Text  text="Tables:" />
      <ListView fx:id="tablesListView" prefHeight="300.0" prefWidth="200.0"/>
   </VBox>

   <VBox fx:id="vbox" spacing="20" GridPane.rowIndex="7" GridPane.rowSpan="2" GridPane.columnIndex="0" GridPane.columnSpan="5">
      <padding><Insets top="50"/></padding>
      <Label fx:id="labelResponse" prefHeight="200.0" minWidth="550.0"  />
   </VBox>

   <stylesheets>
      <URL value="@MainWindow.css" />
   </stylesheets>
</GridPane>
